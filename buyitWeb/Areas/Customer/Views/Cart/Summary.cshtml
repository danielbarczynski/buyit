@model buyitWeb.Models.ViewModels.CartVM
@using Microsoft.Extensions.Options
@inject IOptions<StripeSettings> Stripe

<h1>Shipping details</h1>
<form asp-controller="Cart" asp-action="SummaryPOST">
    <div class="h4">
        Name:
        <br />
        <input asp-for="OrderHeader.Name" />
        <span asp-validation-for="OrderHeader.Name"></span>
        <br />
        Phone Number:
        <br />
        <input asp-for="OrderHeader.PhoneNumber" />
        <span asp-validation-for="OrderHeader.PhoneNumber"></span>
        <br />
        State:
        <br />
        <input asp-for="OrderHeader.State" />
        <span asp-validation-for="OrderHeader.State"></span>
        <br />
        City:
        <br />
        <input asp-for="OrderHeader.City" />
        <span asp-validation-for="OrderHeader.City"></span>
        <br />
        Street Adress:
        <br />
        <input asp-for="OrderHeader.StreetAddress" />
        <span asp-validation-for="OrderHeader.StreetAddress"></span>
        <br />
        Postal Code:
        <br />
        <input asp-for="OrderHeader.PostalCode" />
        <span asp-validation-for="OrderHeader.PostalCode"></span>
    </div>


    <div class="mt-4 h4">
        <p><b>Arrival Date:</b> @DateTime.Now.AddDays(5).ToShortDateString() - @DateTime.Now.AddDays(10).ToShortDateString()</p>
        <p class="h3"><b>Total: </b>@Model.OrderHeader.OrderTotal PLN</p>

        <a asp-action="Index">Back</a>
        <button type="submit">Buy</button>
    </div>
    <div class="col-5 border border-danger mt-3 p-3">
        <div style="font-size: 25px; color: red;">Testing card number: 4242 4242 4242 4242</div>
        <div style="font-size: 25px; color: red;">The rest of the data can be random</div>
    </div>
</form>
@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}

