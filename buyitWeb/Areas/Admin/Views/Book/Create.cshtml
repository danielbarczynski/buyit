@model buyitWeb.Models.ViewModels.BookVM

<form asp-action="Create" enctype="multipart/form-data">
    Title:
    <br />
    <input class="col-3" asp-for="BookModel.Title" />
    <br />
    Category:
    <br />
    <select asp-for="BookModel.CategoryId" asp-items="@Model.Categories" class="col-1">
        <option disabled selected></option>
    </select>
    <br />
    Cover:
    <br />
    <select asp-for="BookModel.CoverTypeId" asp-items="@Model.Covers" class="col-1">
        <option disabled selected></option>
    </select>
    <br />
    Description:
    <br />
    <textarea class="col-3" rows="3" asp-for="BookModel.Description"></textarea>
    <br />
    Author:
    <br />
    <input class="col-3" asp-for="BookModel.Author" />
    <br />
    Price:
    <br />
    <input class="col-1" asp-for="BookModel.Price" />
    <br />
    ISBN:
    <br />
    <input class="col-3" asp-for="BookModel.ISBN" />
    <br />
    Image:
    <br />
    <input type="file" name="file" asp-for="BookModel.ImageUrl" />
    <br />
    <a asp-action="Index">Back</a>
    <button class="mt-2" type="submit">Create</button>
</form>

